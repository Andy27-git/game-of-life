doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(name='description' content="Conway's Game of Life")
        meta(name='author' content='Manakov Vladislav')
        title Game of life
        link(href='main.css' rel='stylesheet')
    body
        h1.game-title Conway's Game of Life
        div.canvas-block
            canvas(id='action-screen' width='600' height='600')
        div.action-buttons
            input.action-buttons__js-start-button.action-buttons__action-button(
            type='button'
            value='start'
            )
            input.action-buttons__js-pause-button.action-buttons__action-button(
            type='button'
            value='pause'
            )
            input.action-buttons__js-step-button.action-buttons__action-button(
            type='button'
            value='step'
            )
            input.action-buttons__js-clear-button.action-buttons__action-button(
            type='button'
            value='clear'
            )
        script(src='../packages/easeljs-0.8.2.min.js')


