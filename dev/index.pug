doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(name='description' content="Conway's Game of Life")
        meta(name='author' content='Manakov Vladislav')
        title Game of life
        link(href='main.css' rel='stylesheet')
        //script(src='http://code.createjs.com/easeljs-0.8.0.min.js')
        //script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    body
        h1.game-title Conway's Game of Life
        div.canvas-block
            canvas(id='action-screen' width='600' height='600')
        div.action-buttons
            input.start-button.action-button(type='button' value='start')
            input.pause-button.action-button(type='button' value='pause' id='pause-button')
            input.step-button.action-button(type='button' value='step')
            input.clear-button.action-button(type='button' value='clear')
        script(src='bundle.js')
        script(src='../packages/easeljs-0.8.2.min.js')
        script(src='../packages/jquery-3.1.1.min.js')


