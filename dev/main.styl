body
  display flex
  flex-direction column
  align-items center
  background-color #666666

.game-title
  font-style italic
  color #cbcbcb

.action-buttons__action-button
  margin 15px
  margin-bottom 0
  color #666666
  font-weight bold
  text-transform uppercase
  font-size 18px
  padding 15px 20px
  border-radius 7px
  background #00ff99
  border none
  cursor pointer

.action-buttons__action-button:hover
  background #00a866

canvas
  display inline-block
  border solid 1px #cbcbcb


